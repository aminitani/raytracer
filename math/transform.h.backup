class Transform : public Matrix<float>
{
	private:
		//
	
	public:
		//static const Transform Identity
		Transform()
		{
			rows = 4;
			columns = 4;
			
			contents = new vector<vector<float>>();
			for(int i = 0; i < rows; i++)
			{
				vector<float> row;
				for(int j = 0; j < columns; j++)
				{
					row.push_back(0);
				}
				contents->push_back(row);
			}
		}
		
		void Identify()
		{
			rows = 4;
			columns = 4;
			
			for(int i = 0; i < 4; i++)
			{
				vector<float> row;
				for(int j = 0; j < 4; j++)
				{
					if(i == j)
						row.push_back(1);
					else//if(i != j)
						row.push_back(0);
				}
				contents->push_back(row);
			}
		}
}